#!/bin/sh

if command -v nodejs > /dev/null; then NODEJS=nodejs; else NODEJS=node; fi

BASEDIR="$(dirname "$(dirname "$(readlink "$0" || echo "$0")")")"

if [ -n "$1" ]
then
    $NODEJS "$BASEDIR/lib/appserver.js" "$@"
else
    [ -f ./local.conf ] && . ./local.conf
    $NODEJS "$BASEDIR/lib/appserver.js" $builddir
fi
