#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

ifneq (,$(or $(filter noopt,$(DEB_BUILD_OPTIONS)),\
             $(filter nostrip,$(DEB_BUILD_OPTIONS))))
	FLAGS += debug=1
endif

override_dh_auto_build:
	sh /opt/open-xchange-appsuite-dev/bin/build.sh app \
	    builddir="debian/@package@/opt/open-xchange/appsuite" \
	    $(FLAGS) --trace

override_dh_auto_clean:
	sh /opt/open-xchange-appsuite-dev/bin/build.sh clean \
	    builddir="debian/@package@/opt/open-xchange/appsuite" \
	    $(FLAGS) --trace

%:
	dh $@
